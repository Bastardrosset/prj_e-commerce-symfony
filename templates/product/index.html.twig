{% extends 'base.html.twig' %}

{% block title %}Nos produits! - La boutique des moucheurs{% endblock %}

{% block content %}

<div class="row mt-5">
    <div class="col-md-2">
        <h3>Filter</h3>
        {{form(form)}}
    </div>
    <div class="col-md-10">
        <h3 class="text-center">Nos produits</h3>

        <div class="d-flex flex-row flex-wrap">
            {% for product in products %}
            <div class="col-md-4 mt-5 px-2">
                <div class="products-item text-center">
                    <a href="{{ path('product', {'slug':product.slug} )}}">
                        <img src="/uploads/{{ product.illustration }}" alt="imge de {{ product.subtitle }}" class="img-fluid rounded rounded-3">
                    </a>
                    <h5 class="mt-2">{{ product.name }}</h5>
                    <span class="product-subtitle d-md-block mb-2">{{ product.subtitle }}</span>
                    <span class="product-price d-md-block mb-2">{{ (product.price / 100)|number_format(2)}} â‚¬</span>
                </div>
            </div>
            {% endfor %} 
        </div>
    </div>
</div>
{% endblock %}
