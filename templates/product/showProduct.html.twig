{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}! - La boutique des moucheurs{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">{{ product.name }}</h1>
        <div class="row">
            <div class="col-md-6 mt-5">
                    <img src="/uploads/{{ product.illustration }}" alt="imge de {{ product.subtitle }}" class="img-fluid rounded rounded-3">
            </div>
            <div class="col-md-6 mt-5 my-auto">
                <h5 class="mt-2 fw-bolder">{{ product.name }}</h5>
                <span class="product-subtitle d-md-block mb-2">{{ product.subtitle }}</span>
                <span class="product-price d-md-block mb-2">{{ (product.price / 100)|number_format(2)}} â‚¬</span>
                <hr>
                <span class="product-subtitle d-md-block mb-2">{{ product.description }}</span>
                <a class="btn btn-primary p-2">Ajouter au panier</a>
            </div>
        </div>
</div>
{% endblock %}
